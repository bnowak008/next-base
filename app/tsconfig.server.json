{
  "extends": "./tsconfig.json",
  "baseUrl": "./",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "ESNEXT",
    "module": "commonjs",
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*.ts"]
}
